generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @map("_id") @default(auto()) @db.ObjectId
  name      String
  firstname String
  email     String   @unique
  password  String
  facebookConnected Boolean @default(false)
  linkedinConnected Boolean @default(false)
  createdAt DateTime @default(now())
}

